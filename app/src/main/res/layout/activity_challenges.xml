<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChallengesActivity"
    android:background="#000000">

    <EditText
        android:id="@+id/searchChallenge"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@null"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter someone's nick"
        android:inputType="textShortMessage|textPersonName"
        android:shadowColor="#B5C9C2C2"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#EBCBCB"
        android:textColorHint="#D2FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/searchChallengeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchChallenge"
        android:background="#ffffff"
        />


</androidx.constraintlayout.widget.ConstraintLayout>